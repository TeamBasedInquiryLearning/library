<?xml version='1.0' encoding='UTF-8'?>
<knowl mode="exercise" xmlns="https://spatext.clontz.org" version="0.2">
    

    <!-- There are four functions in this CheckIt. Give them all a different name so there's no confusion. f, g, h, j, etc are okay. Stick with x's though.-->
    <knowl>
        <intro>
            <p>
                Let <m>{{fname1}}(x)={{funct1}}</m> and <m>{{fname2}}(x)={{funct2}}</m>. Find the following.
            </p>
        </intro>
            <knowl>
                <content>
                    <p>
                        <m>{{fname1}}(x) + {{fname2}}(x)</m>
                    </p>
                </content>
                <outtro>
                    <p>
                        <m>{{sum}}</m>
                    </p>
                </outtro>
                
            </knowl>
            <knowl>
                <content>
                    <p>
                        <m>{{fname1}}(x) - {{fname2}}(x)</m>
                    </p>
                </content>
                <outtro>
                    <p>
                        <m>{{difference}}</m>
                    </p>
                </outtro>
                
            </knowl>
            <knowl>
                <content>
                    <p>
                        <m>{{fname1}}(x) \times {{fname2}}(x)</m>
                    </p>
                </content>
                <outtro>
                    <p>
                        <m>{{product}}</m>
                    </p>
                </outtro>
                
            </knowl>
            <knowl>
                <content>
                    <p>
                        <m>\dfrac{ {{fname1}}(x)}{ {{fname2}}(x)}</m>
                    </p>
                </content>
                <outtro>
                    <p>
                        <m>{{quotient}}</m>
                    </p>
                </outtro>
                
            </knowl>
        
    </knowl>

    <knowl>
        <intro>
            <p>
                <!--{{#swap}}-->
                Let <m>{{fname3}}(x)={{funct3}}</m> and <m>{{fname4}}(x)={{funct4}}</m>. Find the following.
                <!--{{/swap}}-->
                <!--{{^swap}}-->
                Let <m>{{fname4}}(x)={{funct4}}</m> and <m>{{fname3}}(x)={{funct3}}</m>. Find the following.
                <!--{{/swap}}-->
            </p>
        </intro>
            <knowl>
                <content>
                    <p>
                        <m>{{fname4}}({{fname3}}(x))</m>
                    </p>
                </content>
                <outtro>
                    <p>
                        <m>{{composition}}</m>
                    </p>
                </outtro>
                
            </knowl>
            <knowl>
                <content>
                    <p>
                       <m>{{fname3}}({{fname4}}({{xvalue}}))</m>
                    </p>
                </content>
                <outtro>
                    <p>
                        <m>{{composition_value}}</m>
                    </p>
                </outtro>
                
            </knowl>
            
        
    </knowl>
      
    
</knowl>
