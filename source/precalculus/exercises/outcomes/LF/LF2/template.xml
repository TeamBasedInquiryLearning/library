                <p> <image
                    source="assets/LF2/generated/{{__seed__}}/plot.png"
                    description="Plot"/>
                </p>
            </content>
            <outtro>
                <p>
                    <m>{{line2_si}}</m> or <m>{{line2_ps}}</m>
                    <!-- using si for slope-intercept and ps for point-slope -->
