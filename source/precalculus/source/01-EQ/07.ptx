                \draw[thick] (\x,0.5pt) -- (\x,-0.5pt) node[below] {\xtext};
                \draw[thick,red,dashed] (-0.2,-0.16) -- (-0.2,0.16);
                \draw[thick,red,dashed] (-0.1,-0.16) -- (-0.1,0.16);
                \draw[thick,red,dashed] (0.3,-0.16) -- (0.3,0.16);
