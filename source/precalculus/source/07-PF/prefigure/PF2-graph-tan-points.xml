<diagram dimensions="(300,300)" margins="30" xmlns="https://prefigure.org">
  <definition>f(x)=tan(x)</definition>
  <coordinates bbox="(-0.1,-3.1,2*pi+0.2,3.1)">
    <grid-axes spacings="(0,pi/6,2*pi),(-3,0.5,3)" h-pi-format="yes" hlabels="(0,pi/3,2*pi)" vlabels="(-3,1,3)"/>
    <group at="points">
      <repeat at="points1" parameter="i=0..12" annotate="yes" text="Points">
        <point at="p" p="(i*pi/6,f(i*pi/6))" annotate="yes" text="The point ${i*pi/6} comma ${tan(i*pi/6)}"/>
      </repeat>
      <repeat at="points2" parameter="i=0..3" annotate="yes" text="Points">
        <point at="p2" p="(i*pi/2+pi/4,f(i*pi/2+pi/4))" annotate="yes" text="The point ${i*pi/2+pi/4} comma ${tan(i*pi/2+pi/4)}"/>
      </repeat>
    </group>
    <graph at="f" function="f" />
    <line at="L1" endpoints="((pi/2,0),(pi/2,1))" dash="9 9" stroke="red" infinite="yes"/>
    <line at="L2" endpoints="((3*pi/2,0),(3*pi/2,1))" dash="9 9" stroke="red" infinite="yes"/>
  </coordinates>
  <annotations>
    <annotation ref="figure" text="The tangent curve, its asymptotes, and points along it">
      <annotation ref="points" />
      <annotation ref="f" sonify="yes" text="The curve tangent of x"/>
      <annotation ref="L1" text="The vertical asymptote x equals pi over 2"/>
      <annotation ref="L2" text="The vertical asymptote x equals 3 pi over 2"/>
    </annotation>
  </annotations>
</diagram>