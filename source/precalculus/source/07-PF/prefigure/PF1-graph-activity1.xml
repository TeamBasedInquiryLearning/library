<diagram dimensions="(300,300)" margins="20" xmlns="https://prefigure.org">
  <definition>f(x)=2*sin(3*x-pi)+4</definition>
  <coordinates bbox="(-2*pi-0.1,-0.1,2*pi+0.2,6.1)">
    <grid-axes spacings="(-2*pi,pi/2,2*pi),(-6,0.5,6)" h-pi-format="yes" vlabels="(-6,1,6)" />
    <graph at="f" function="f"  />
  </coordinates>
  <annotations>
    <annotation ref="figure" text="A transformation of the sine curve">
      <annotation ref="f" sonify="yes" text="The curve sine of x compressed horizontally and shifted right, then stretched vertically, then shifted up"/>
    </annotation>
  </annotations>
</diagram>