<diagram dimensions="(300,300)" margins="5" xmlns="https://prefigure.org">
  <definition>f(x)=sec(x)</definition>
  <definition> xs=[0,pi/6,pi/4,pi/3,pi/2,2*pi/3,3*pi/4,5*pi/6,pi,7*pi/6,5*pi/4,4*pi/3,3*pi/2,5*pi/3,7*pi/4,11*pi/6,2*pi]</definition>
  <coordinates bbox="(-1,-3.1,2*pi+0.2,3.1)">
    <grid-axes spacings="(0,pi/6,2*pi),(-3,0.5,3)" h-pi-format="yes" hlabels="(0,pi/3,2*pi)" vlabels="(-3,1,3)"/>
    <repeat at="points" parameter="i=0..16" annotate="yes"  text="Points along the graph">
      <point at="p" p="(xs[i],f(xs[i]))" annotate="yes" text="The point ${round(xs[i],2)} comma ${round(f(xs[i]),2)}"/>
    </repeat>
    <graph at="f" function="f" />
    <line at="L1" endpoints="((pi/2,0),(pi/2,1))" dash="9 9" stroke="red" infinite="yes"/>
    <line at="L2" endpoints="((3*pi/2,0),(3*pi/2,1))" dash="9 9" stroke="red" infinite="yes"/>
  </coordinates>
  <annotations>
    <annotation ref="figure" text="The secant curve, its asymptotes, and points along it">
      <annotation ref="points"/>
      <annotation ref="f" sonify="yes" text="The curve secant of x"/>
      <annotation ref="L1" text="The vertical asymptote x equals pi over 2"/>
      <annotation ref="L2" text="The vertical asymptote x equals 3 pi over 2"/>
    </annotation>
  </annotations>
</diagram>