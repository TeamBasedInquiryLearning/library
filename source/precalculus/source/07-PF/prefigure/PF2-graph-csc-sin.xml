<diagram dimensions="(300,300)" margins="30" xmlns="https://prefigure.org">
  <definition>f(x)=1/sin(x)</definition>
  <definition>g(x)=sin(x)</definition>
  <coordinates bbox="(-2*pi-0.2,-3.1,2*pi+0.2,3.1)">
    <grid-axes spacings="(-2*pi,pi/2,2*pi),(-3,1,3)" h-pi-format="yes"  vlabels="(-3,1,3)"/>

    <graph at="f" function="f" />
    <graph at="g" function="g" stroke="green" dash="5 5"/>

    <group at="asymptotes">
      <line at="L1" endpoints="((-2*pi,0),(-2*pi,1))" dash="9 9" stroke="red" infinite="yes"/>
      <line at="L2" endpoints="((-pi,0),(-pi,1))" dash="9 9" stroke="red" infinite="yes"/>
      <line at="L3" endpoints="((0,0),(0,1))" dash="9 9" stroke="red" infinite="yes"/>
      <line at="L4" endpoints="((pi,0),(pi,1))" dash="9 9" stroke="red" infinite="yes"/>
      <line at="L5" endpoints="((2*pi,0),(2*pi,1))" dash="9 9" stroke="red" infinite="yes"/>
    </group>
  </coordinates>
  <annotations>
    <annotation ref="figure" text="The cosecant curve, its asymptotes, and the sine curve">
      <annotation ref="f" sonify="yes" text="The curve cosecant of x"/>
      <annotation ref="asymptotes" text="The vertical asymptotes of cosecant of x"/>
      <annotation ref="g" sonify="yes" text="The curve sine of x"/>
    </annotation>
  </annotations>
</diagram>