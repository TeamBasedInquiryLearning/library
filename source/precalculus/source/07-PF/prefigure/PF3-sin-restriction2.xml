<diagram dimensions="(300,300)" margins="30" xmlns="https://prefigure.org">
  <definition>f(x)=sin(x)</definition>
  <coordinates bbox="(-0.2-pi/2,-1.1,pi/2+0.2,1.1)">
    <grid-axes spacings="(-2*pi,pi/4,2*pi),(-1,0.5,1)" h-pi-format="yes" hlabels="(-pi/2,pi/4,pi/2)" vlabels="(-3,1,3)"/>
    <graph at="f" function="f" domain="(-pi/2,pi/2)" />
  </coordinates>
  <annotations>
    <annotation ref="figure" text="The sine curve between negative pi over 2 and pi over 2">
      <annotation ref="f" sonify="yes" text="The sine curve between negative pi over 2 and pi over 2"/>
    </annotation>
  </annotations>
</diagram>