  <coordinates bbox="(-0.2,-1.1,2*pi+0.2,1.1)">
    <grid-axes spacings="(-2*pi,pi/2,2*pi),(-1,0.5,1)" h-pi-format="yes" hlabels="(0,pi/2,2*pi)" vlabels="(-3,1,3)"/>
