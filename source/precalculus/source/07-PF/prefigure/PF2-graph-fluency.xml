<diagram dimensions="(300,300)" margins="30" xmlns="https://prefigure.org">
  <definition>f(x)=3/sin(x/2)</definition>
  <coordinates bbox="(-4*pi-0.2,-6.1,4*pi+0.2,6.1)">
    <grid-axes spacings="(-4*pi,pi/2,4*pi),(-6,1,6)" h-pi-format="yes"  hlabels="(-4*pi,pi,4*pi)" vlabels="(-6,1,6)"/>
    <graph at="f" function="f" />

    <group at="asymptotes">
      <repeat parameter="i=-2..2">
        <line at="L" endpoints="((2*pi*i,0),(2*pi*i,1))" dash="9 9" stroke="red" infinite="yes"/>
        </repeat>
    </group>
  </coordinates>
  <annotations>
    <annotation ref="figure" text="The graph of 3 times cosecant of x over 2 and its asymptotes">
      <annotation ref="f" sonify="yes" text="The graph of 3 times cosecant of x over 2"/>
      <annotation ref="asymptotes" text="The vertical asymptotes"/>
    </annotation>
  </annotations>
</diagram>