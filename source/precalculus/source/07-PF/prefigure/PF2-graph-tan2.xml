<diagram dimensions="(300,300)" margins="30" xmlns="https://prefigure.org">
  <definition>f(x)=tan(x)</definition>
  <coordinates bbox="(-2*pi-0.2,-3.1,2*pi+0.2,3.1)">
    <grid-axes spacings="(-2*pi,pi/2,2*pi),(-3,1,3)" h-pi-format="yes"  vlabels="(-3,1,3)"/>
    <graph at="f" function="f" />

    <group at="asymptotes">
      <line at="L1" endpoints="((-3*pi/2,0),(-3*pi/2,1))" dash="9 9" stroke="red" infinite="yes"/>
      <line at="L2" endpoints="((-pi/2,0),(-pi/2,1))" dash="9 9" stroke="red" infinite="yes"/>
      <line at="L3" endpoints="((pi/2,0),(pi/2,1))" dash="9 9" stroke="red" infinite="yes"/>
      <line at="L4" endpoints="((3*pi/2,0),(3*pi/2,1))" dash="9 9" stroke="red" infinite="yes"/>
    </group>
  </coordinates>
  <annotations>
    <annotation ref="figure" text="The tangent curve and its asymptotes">
      <annotation ref="f" sonify="yes" text="The curve tangent of x"/>
      <annotation ref="asymptotes" text="The vertical asymptotes of tangent of x"/>
    </annotation>
  </annotations>
</diagram>