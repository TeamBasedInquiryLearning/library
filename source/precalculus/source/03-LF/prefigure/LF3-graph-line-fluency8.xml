<diagram dimensions="(300,300)" margins="5" xmlns="https://prefigure.org">
  <definition>width=8</definition>
  <definition>f(x)=7/2*(x-2)+5</definition>
  <coordinates bbox="(-width,-width,width,width)">
    <grid-axes spacings="(-width,1,width),(-width,1,width)"/>
    <graph at="L" function="f"/>
  </coordinates>
  <annotations>
    <annotation ref="figure" text="A graph of a line">
        <annotation ref="L"  text="A line sloping up seven units for every two units moved right, passing through the point 2 comma 5"/>
    </annotation>
  </annotations>
</diagram>