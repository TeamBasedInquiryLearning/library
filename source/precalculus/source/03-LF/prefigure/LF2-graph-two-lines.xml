<diagram dimensions="(300,300)" margins="5" xmlns="https://prefigure.org">
  <definition>width=5</definition>
  <coordinates bbox="(-width,-width,width,width)">
    <grid-axes spacings="(-width,1,width),(-width,1,width)"/>
    <line at="L1" endpoints="((-2,-1),(0,3))" stroke="blue" infinite="yes"/>
    <label anchor="(-1,3)" color="blue">Line A</label>
    <line at="L2" endpoints="((0,-2),(1,0))" stroke="red" infinite="yes"/>
    <label anchor="(3,1)" color="red">Line B</label>
  </coordinates>
  <annotations>
    <annotation ref="figure" text="The graph of a function">
        <annotation at="L1" sonify="yes" text="A line labeled Line A sloping up two units for every unit moved to the right"/>
        <annotation at="L2" sonify="yes" text="A line labeled Line B sloping up two units for every unit moved to the right"/>
    </annotation>
  </annotations>
</diagram>