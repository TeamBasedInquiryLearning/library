<diagram dimensions="(300,300)" margins="5" xmlns="https://prefigure.org">
  <definition>width=5</definition>
  <coordinates bbox="(-width,-width,width,width)">
    <grid-axes spacings="(-width,1,width),(-width,1,width)"/>
    <line at="L1" endpoints="((1,1),(2,-2))" stroke="blue" infinite="yes"/>
    <line at="L2" endpoints="((1,3),(4,2))" stroke="red" infinite="yes"/>
  </coordinates>
  <annotations>
    <annotation ref="figure" text="The graph of two lines intersecting">
        <annotation ref="L1"  text="A line sloping upwards two units for each unit moved to the right"/>
        <annotation ref="L2"  text="A line sloping upwards one unit for each four units moved to the left"/>
    </annotation>
  </annotations>
</diagram>