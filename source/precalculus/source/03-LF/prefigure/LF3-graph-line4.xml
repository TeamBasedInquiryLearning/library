<diagram dimensions="(300,300)" margins="5" xmlns="https://prefigure.org">
  <definition>width=9</definition>
  <definition>p1=(3,3)</definition>
  <definition>p2=(0,4)</definition>
  <coordinates bbox="(-width,-width,width,width)">
    <grid-axes spacings="(-width,1,width),(-width,1,width)"/>
    <line at="L" endpoints="(p1,p2)" stroke="blue" infinite="yes"/>
    <point at="p2" p="p2" stroke="blue" fill="blue"/>
  </coordinates>
  <annotations>
    <annotation ref="figure" text="A graph of a point lying on a line">
        <annotation ref="L"  text="A line sloping up one unit for every  three units moved to the left"/>
        <annotation ref="p2" text="The point 0 comma 4"/>
    </annotation>
  </annotations>
</diagram>