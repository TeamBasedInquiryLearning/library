<diagram dimensions="(300,300)" margins="5" xmlns="https://prefigure.org">
  <definition>width=8</definition>
  <definition>p1=(-7,1)</definition>
  <definition>p2=(6,-2)</definition>
  <coordinates bbox="(-width,-width,width,width)">
    <grid-axes spacings="(-width,1,width),(-width,1,width)"/>
    <line at="L" endpoints="(p1,p2)" stroke="blue" infinite="yes"/>
    <point at="p1" p="p1" stroke="blue" fill="blue"/>
    <point at="p2" p="p2" stroke="blue" fill="blue"/>
  </coordinates>
  <annotations>
    <annotation ref="figure" text="A graph of two points lying on a line">
        <annotation ref="L"  text="A line sloping up thirteen units for every three units moved to the left"/>
        <annotation ref="p1" text="The point -7 comma 1"/>
        <annotation ref="p2" text="The point 6 comma -2"/>
    </annotation>
  </annotations>
</diagram>