<diagram dimensions="(300,300)" margins="5" xmlns="https://prefigure.org">
  <definition>width=13</definition>
  <definition>f(x)=3*x-3</definition>
  <coordinates bbox="(-width,-width,width,width)">
    <grid-axes spacings="(-width,1,width),(-width,1,width)"/>
    <line at="L" endpoints="((0,-3),(1,0))" stroke="blue" infinite="yes"/>
    <repeat parameter="x=-3..2">
      <point p="(x,f(x))" stroke="blue" fill="blue" annotation="yes" text="The point {x} comma {f(x)}"/>
    </repeat>
  </coordinates>
  <annotations>
    <annotation ref="figure" text="A graph of two points lying on a line">
        <annotation at="L"  text="A line sloping up three units for every unit moved to the right"/>
    </annotation>
  </annotations>
</diagram>