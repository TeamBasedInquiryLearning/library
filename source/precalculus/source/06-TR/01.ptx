          <p> <m>\frac{\pi}{2}</m>
            <ol marker="A." cols="2">
              <li><p> <m>45^{\circ}</m> </p></li>
              <li><p> <m>90^{\circ}</m> </p></li>
              <li><p> <m>180^{\circ}</m> </p></li>
              <li><p> <m>360^{\circ}</m> </p></li>
          </ol> </p>
        </statement>
        <answer>
          <p>
            B
          </p>
        </answer>
      </task>
      <task>
        <statement>
          <p> <m>\frac{3\pi}{4}</m>
            <ol marker="A." cols="2">
              <li><p> <m>45^{\circ}</m> </p></li>
              <li><p> <m>90^{\circ}</m> </p></li>
              <li><p> <m>135^{\circ}</m> </p></li>
              <li><p> <m>180^{\circ}</m> </p></li>
          </ol> </p>
        </statement>
        <answer>
          <p>
            C
          </p>
        </answer>
      </task>
    </activity>
