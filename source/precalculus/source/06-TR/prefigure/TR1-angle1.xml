<diagram dimensions="(300,300)" margins="5" xmlns="https://prefigure.org">
  <definition>width=1</definition>
  <definition>p1=1/sqrt(2)*(1,1)</definition>
  <definition>p2=1/sqrt(2)*(-1,1)</definition>
  <coordinates bbox="(-width,-width,width,width)">
    <arc center="(0,0)" radius="0.1" range="(pi/4,3*pi/4)" degrees="no" stroke="black"/>
    <vector at="v1" v="p1" stroke="blue" thickness="2"/>
    <vector at="v2" v="p2" stroke="blue" thickness="2"/>
  </coordinates>
  <annotations>
    <annotation ref="figure" text="Two arrows joined at their base. One points up and right with a slope of 1, and the other points up and left with a slope of 1.">
    </annotation>
  </annotations>
</diagram>