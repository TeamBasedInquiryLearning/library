<diagram dimensions="(300,300)" margins="5" xmlns="https://prefigure.org">
  <definition>width=1.2</definition>
  <definition>t1=0</definition>
  <definition>t2=4*pi/3</definition>
  <definition>p1=(cos(t1),sin(t1))</definition>
  <definition>p2=(cos(t2),sin(t2))</definition>
  <coordinates bbox="(-width,-width,width,width)">
    <axes decorations="no"/>
    <circle at="c" center="(0,0)" radius="1" stroke="gray" thickness="1"/>
    
    <angle-marker at="a" points="(p1,(0,0),p2)" alignment="northwest"><m>\frac{4\pi}{3}</m></angle-marker>
    <vector at="v1" v="p1" stroke="blue" thickness="2"/>
    <vector at="v2" v="p2" stroke="blue" thickness="2"/>
    
  </coordinates>
  <annotations>
    <annotation ref="figure" text="Angle formed by two arrows in the coordinate plane beginning at the origin and terminating along a unit circle.">
      <annotation ref="v1" text="An arrow from the origin pointing directly right along the x-axis"/>
      <annotation ref="v2" text="An arrow from the origin pointing down and left"/>
      <annotation ref="a" text="The angle is labeled 4 pi over 3"/>
      <annotation ref="c" text="A circle of radius 1 centered at the origin.  The ends of both arrows lie on the circle."/>
     </annotation>
  </annotations>
</diagram>
