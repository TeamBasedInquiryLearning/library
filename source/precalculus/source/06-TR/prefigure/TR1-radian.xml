<diagram dimensions="(300,300)" margins="5" xmlns="https://prefigure.org">
  <definition>width=1.2</definition>
  <definition>t1=0</definition>
  <definition>t2=pi/3</definition>
  <definition>p1=(cos(t1),sin(t1))</definition>
  <definition>p2=(cos(t2),sin(t2))</definition>
  <coordinates bbox="(-width,-width,width,width)">
    <axes decorations="no"/>
    <circle at="c" center="(0,0)" radius="1" stroke="gray" thickness="1"/>
    
    <angle-marker at="a" points="(p1,(0,0),p2)" ><m>1</m></angle-marker>
    <group>
      <arc at="arc" center="(0,0)" radius="1" range="(t1,t2)" degrees="no" stroke="blue" thickness="1"/>
      <label color="blue" anchor="(cos(t2/2),sin(t2/2))" alignment="northeast" ><m>r</m></label>
    </group>
    <group>
      <vector at="v1" v="p1" stroke="blue" thickness="2"/>
      <label color="blue" anchor="(0.5,0)" alignment="northeast" ><m>r</m></label>
    </group>
      <vector at="v2" v="p2" stroke="blue" thickness="2"/>

    
  </coordinates>
  <annotations>
    <annotation ref="figure" text="Two arrows in the coordinate plane beginning at the origin and terminating along a unit circle.">
      <annotation ref="v1" text="An arrow from the origin pointing directly right along the x-axis, labeled r."/>
      <annotation ref="v2" text="An arrow from the origin pointing up and right."/>
      <annotation ref="c" text="A circle of radius 1 centered at the origin.  The ends of both arrows lie on the circle."/>
      <annotation ref="arc" text="The portion of the circle between the two angles, labeled r"/>
      <annotation ref="a" text="The angle is labeled 1"/>
    </annotation>
  </annotations>
</diagram>