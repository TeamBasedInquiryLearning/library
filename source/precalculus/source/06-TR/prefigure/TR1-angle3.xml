<diagram dimensions="(300,300)" margins="5" xmlns="https://prefigure.org">
  <definition>width=1</definition>
  <definition>t1=pi/2</definition>
  <definition>t2=5*pi/4</definition>
  <definition>p1=(cos(t1),sin(t1))</definition>
  <definition>p2=(cos(t2),sin(t2))</definition>
  <coordinates bbox="(-width,-width,width,width)">
    <angle-marker points="p1,(0,0),p2" />
    <vector at="v1" v="p1" stroke="blue" thickness="2"/>
    <vector at="v2" v="p2" stroke="blue" thickness="2"/>
  </coordinates>
  <annotations>
    <annotation ref="figure" text="Two arrows joined at their base. One points straight up, and the other points down and left with a slope of 1.">
    </annotation>
  </annotations>
</diagram>