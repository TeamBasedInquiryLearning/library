<diagram dimensions="(300,300)" margins="20" xmlns="https://prefigure.org">
  <definition>width=1.2</definition>
  <definition>t1=0</definition>
  <definition>t2=pi/6</definition>
  <definition>p1=(cos(t1),sin(t1))</definition>
  <definition>p2=(cos(t2),sin(t2))</definition>
  <coordinates bbox="(-width,-width,width,width)">
    <axes decorations="no"/>
    <circle at="c" center="(0,0)" radius="1" stroke="gray" thickness="1"/>
    
    <angle-marker at="a" points="(p1,(0,0),p2)" alignment="east" ><m>30^\circ</m></angle-marker>
    <vector at="v1" v="p1" stroke="blue" thickness="2"/>

    <group at="triangle">
      <vector at="v2" v="p2" stroke="blue" thickness="2"/>
      <line at="l1" endpoints="((0,0),(cos(t2),0))" stroke="green"/>
      <line  endpoints="((cos(t2),0),(cos(t2),sin(t2)))" stroke="green"/>
      <angle-marker stroke="green" points="(p2,(cos(t2),0),(0,0))"/>
    </group>
   

    <point at="p" p="p2"><m>(x_1,y_1)</m></point>

    
  </coordinates>
  <annotations>
    <annotation ref="figure" text="Two arrows in the coordinate plane beginning at the origin and terminating along a unit circle.">
      <annotation ref="triangle" text="A right triangle">
        <annotation ref="v2" text="An arrow from the origin pointing up and right, forming the hypotenuse of the triangle.">
          <annotation ref="p" text="The point at the end of the upward angled arrow is labeled x sub 1 comma y sub 1"/>
        </annotation>
        <annotation ref="l1" text="A green line segment along the x axis, forming one leg of the triangle"/>
        <annotation ref="l2" text="A green line segment going vertically from the x axis to the point,  forming one leg of the triangle"/>
      </annotation>
      <annotation ref="c" text="A circle of radius 1 centered at the origin.  The ends of both arrows lie on the circle."/>
      <annotation ref="v1" text="An arrow from the origin pointing directly right along the x-axis"/>
      <annotation ref="a" text="The angle is labeled 30 degrees"/>

    </annotation>
  </annotations>
</diagram>