<diagram dimensions="(300,300)" margins="5" xmlns="https://prefigure.org">
  <definition>f(x)=fabs(2-x)-1</definition>
  <coordinates bbox="(-5,-5,5,5)">
    <grid-axes/>
    <group>
      <graph at="f" function="f" domain="(1,5)" stroke="blue"/>
      <label anchor="(2,1)" color="blue"><m>g(x)</m></label>
    </group> 
  </coordinates>
  <annotations>
    <annotation ref="figure"
                text="The graph of a function">
      <annotation ref="f" sonify="yes" text="A graph decreasing linearly from 1 comma 0 to 2 comma 1, then increasing linearly to 5 comma 2"/>
    </annotation>
  </annotations>
</diagram>