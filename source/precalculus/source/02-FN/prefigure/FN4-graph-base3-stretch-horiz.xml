<diagram dimensions="(300,300)" margins="5" xmlns="https://prefigure.org">
  <coordinates bbox="(-5,-5,5,5)">
    <grid-axes/>
    <group at="f">
      <path start="(-2,-1)" stroke="blue">
        <lineto point="(-0.5,2)"/>
        <lineto point="(0.5,2)"/>
        <lineto point="(2,-1)"/>
      </path>
      <label anchor="(1,3)" color="blue"><m>f(2x)</m></label>
    </group>
  </coordinates>

  <annotations>
    <annotation ref="figure"
                text="The graph of a piecewise linear function labeled f of 2 x">
      <annotation ref="f" text="A function increasing linearly from -2 comma -1 to -0.5 comma 2, then horizontally to 0.5 comma 2, then decreases to 2 comma -1"/>
     
    </annotation>
  </annotations>
</diagram>