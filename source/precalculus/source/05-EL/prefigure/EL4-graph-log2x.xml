<diagram dimensions="(300,300)" margins="5" xmlns="https://prefigure.org">
  <definition>f(x)=log(x)/log(2)</definition>
  <coordinates bbox="(-5,-5,5,5)">
    <grid-axes/>
    <graph at="function" function="f"/>
    <group at="points">
    <point p="(0.25,-2)" at="p1"/>
    <point p="(0.5,-1)" at="p2"/>
    <point p="(1,0)" at="p3"/>
    <point p="(2,1)" at="p4"/>
    <point p="(4,2)" at="p5"/>
    </group>
    <line at="asymptote" endpoints="((0,-5),(0,5))" stroke="red" infinite = "yes" dash="9 9"/>
  </coordinates>
  <annotations>
    <annotation ref="figure" text="Points on the graph of the function y equals log base 2 of x">
      <annotation ref="function" text="The function y equals log base 2 of x" sonify="yes"/>
      <annotation ref="asymptote" text="The vertical asymptote x equals 0"/>
      <annotation ref="points" text="Selected points on the graph of y equals log base 2 of x">
        <annotation ref="p1" text="The point 0.25 comma -2"/>
        <annotation ref="p2" text="The point 0.5 comma -1"/>
        <annotation ref="p3" text="The point 1 comma 0"/>
        <annotation ref="p4" text="The point 2 comma 1"/>
        <annotation ref="p5" text="The point 4 comma 2"/>
      </annotation>
    </annotation>
  </annotations>
</diagram>