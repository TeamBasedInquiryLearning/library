<diagram dimensions="(300,300)" margins="5" xmlns="https://prefigure.org">
  <definition>f(x)=6^(-x)</definition>
  <coordinates bbox="(-5,-5,5,8)">
    <grid-axes/>
    <graph at="function" function="f"/>
    <group at="points">
    <point p="(-1,6)" at="p1"/>
    <point p="(0,1)" at="p2"/>
    </group>
    <line at="asymptote-h" endpoints="((-5,0),(5,0))" stroke="red" infinite = "yes" dash="9 9"/>
  </coordinates>
    <annotations>
    <annotation ref="figure" text="The graph of the function y equals 6 to the negative x, selected points, and its asymptote">
      <annotation ref="function" text="The function y equals 6 to the negative x" sonify="yes"/>
      <annotation ref="asymptote-h" text="The horizontal asymptote y equals 0"/>
      <annotation ref="points" text="Selected points on the graph of y equals 6 to the negative x">
        <annotation ref="p1" text="The point -1 comma 6"/>
        <annotation ref="p2" text="The point 0 comma 1"/>
      </annotation>
    </annotation>
  </annotations>
</diagram>