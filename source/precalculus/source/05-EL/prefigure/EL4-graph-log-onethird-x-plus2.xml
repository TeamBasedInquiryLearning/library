<diagram dimensions="(300,300)" margins="5" xmlns="https://prefigure.org">
  <definition>f(x)=log(x)/log(1/3)+2</definition>
  <coordinates bbox="(-5,-5,10,5)">
    <grid-axes/>
    <graph at="function" function="f"/>
    <group at="points">
    <point p="(1,2)" at="p1"/>
    <point p="(3,1)" at="p2"/>
    </group>
    <line at="asymptote" endpoints="((0,-5),(0,5))" stroke="red" infinite = "yes" dash="9 9"/>
  </coordinates>
  <annotations>
    <annotation ref="figure" text="Points on the graph of the function y equals log base one third of x plus 2">
      <annotation ref="function" text="The function y equals log base one third of x plus 2" sonify="yes"/>
      <annotation ref="asymptote" text="The vertical asymptote x equals 0"/>
      <annotation ref="points" text="Selected points on the graph of y equals log base one third of x plus 2">
        <annotation ref="p1" text="The point 1 comma 2"/>
        <annotation ref="p2" text="The point 3 comma 1"/>
      </annotation>
    </annotation>
  </annotations>
</diagram>