<diagram dimensions="(300,300)" margins="25" xmlns="https://prefigure.org">
  <definition>f(x) = sqrt(x) </definition>
  <definition>g(x) = -1*sqrt(x) </definition>
  <coordinates bbox="(-0.1,-2.1,4.1,2.1)">
    <area-between-curves functions="(g,f)" domain="(0.01,4)" stroke="none" />   
    <grid-axes/>
    <graph ref="f" function="f" domain="(0,4)"/>
    <graph ref="g" function="g" domain="(0,4)" dash="9 9"/>
  </coordinates>

  <annotations>
    <annotation ref="figure" text="The area between the square root of x and its negative, from x equals 0 to 4">
      <annotation ref="f" text="The function square root of x from 0 to 4"/>
      <annotation ref="g" text="The reflection of the square root function across the x axis"/>
    </annotation>
  </annotations>
</diagram>