<diagram dimensions="(300,400)" margins="50"  xmlns="https://prefigure.org" >
  <coordinates bbox="(-1,0,7,10)" aspect-ratio="1">
    <rectangle at="tank" lower-left="(0,0)" dimensions="(6,10)" stroke="black"/>

    <group at="slice"> 
      <rectangle lower-left="(0,6)" dimensions="(6,2)" fill="blue" fill-opacity="0.4" stroke="none"/>
      <label anchor="(6,6)" alignment="east" scale="0.7"><m>h_i=6\ \text{m}</m></label>
      <group at="h">
        <line endpoints="((-0.3,6),(-0.3,8))" thickness="1" scale="0.7" rotate="-90" offset="(0,30)"><m>\Delta h = 5\ \text{m}</m></line>
        <line endpoints="((-0.2,6),(-0.4,6))" thickness="1"/>
        <line endpoints="((-0.2,8),(-0.4,8))" thickness="1"/>
      </group>
    </group>

  </coordinates>

  <annotations>
    <annotation ref="figure" text="A cross section of a cylindrical tank with a slice of water">
      <annotation ref="slice" text="A blue rectangle representing a slice of water. Its height is labeled to be 6 meters">
        <annotation ref="h" text="A line segment showing the thickness of the slice to be delta h equals 5 meters"/>
      </annotation>
    </annotation>
  </annotations>
</diagram>