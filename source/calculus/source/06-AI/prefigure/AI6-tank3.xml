<diagram dimensions="(300,500)" margins="50"  xmlns="https://prefigure.org" >
  <coordinates bbox="(-1,0,22,101)" >
    <polygon at="tank" points="((5,0),(15,0),(20,100),(0,100))" stroke="black" closed="yes"/>

    <group at="h">
