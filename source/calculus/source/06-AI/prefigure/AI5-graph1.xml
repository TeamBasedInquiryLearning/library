<diagram dimensions="(300,300)" margins="25" xmlns="https://prefigure.org" >
  <coordinates bbox="(-10,0,17.1,20.1)">

    <group at="h1">
      <line endpoints="((-7,0),(-7,20))" rotate="-90" offset="(0,20)"><m>20\ \text{m}</m></line>
      <line endpoints="((-7.4,0),(-6.6,0))"/>
      <line endpoints="((-7.4,20),(-6.6,20))"/>
    </group> 
    <group at="h2">
      <line endpoints="((11,5),(11,10))" rotate="-90" offset="(0,-50)"><m>\Delta h = 5\ \text{m}</m></line>
      <line endpoints="((10.6,5),(11.4,5))"/>
      <line endpoints="((10.6,10),(11.4,10))"/>
    </group> 
    <repeat ref="r" parameter="k=0..3">
      <rectangle lower-left="(0,5*k)" dimensions="(10,5)" fill="blue" fill-opacity="50%" stroke="black"/>
      <label anchor="(0,5*k)" alignment="west" scale="0.7"><m>h_${k+1}=${5*k}\ \text{m}</m></label>
    </repeat>
    
  </coordinates>

  <annotations>
    <annotation ref="figure" text="A rectangle sliced into four pieces">
      <annotation ref="r" text="A rectangle twice as tall as it is wide, sliced horizontally into four equal subrectangles. The bottoms of the rectangles are labeled h sub 1 equals 0 meters, h sub 2 equals 5 meters, ... h sub 4 equals 15 meters"/>
      <annotation ref="h1" text="A vertical bar showing the height of the rectangle to be 20 meters"/>
      <annotation ref="h2" text="A vertical bar showing the height of a subrectangle to be delta h equals 5 meters"/>
    </annotation>
  </annotations>
</diagram>