<diagram dimensions="(300,300)" margins="35" xmlns="https://prefigure.org">
  <definition>f(x) = 1/x^2</definition>
  <coordinates bbox="(-0.1,-0.1,3.6,4.1)">
    <grid-axes />
    <area-under-curve function="f" domain="(1,3)"/>
    <graph at="f" function="f"/>
  </coordinates>

  <annotations>
    <annotation ref="figure" text="A graph of a function">
      <annotation ref="f" sonify="yes" text="A decreasing function in the first quadrant. The area below the curve, above the x-axis, to the right of 1, and to the left of 3 is shaded."/>
    </annotation>
  </annotations>
</diagram>