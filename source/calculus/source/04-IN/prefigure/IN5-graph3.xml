<diagram dimensions="(300,300)" margins="35" xmlns="https://prefigure.org">
  <definition>f(x) = x^2 + 3</definition>
  <coordinates bbox="(-3.1,-0.5,3.1,13)">
    <grid-axes spacings = "((-3,1,3),(0,1,13))"/>
    <graph at="f" function="f"/>
  </coordinates>

  <annotations>
    <annotation ref="figure" text="A graph of a function">
      <annotation ref="f" sonify="yes" text="A parabola beginning at -3 comma 12, descending to a minimum at 0 comma 3, and then ascending to 3 comma 12"/>
    </annotation>
  </annotations>
</diagram>