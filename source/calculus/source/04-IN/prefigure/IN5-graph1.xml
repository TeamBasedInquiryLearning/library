<diagram dimensions="(600,300)" margins="35" xmlns="https://prefigure.org">
  <definition>f(x) = 0.5*x+2 </definition>
  <coordinates bbox="(-4.1,-0.1,8.1,6.1)">
    <grid-axes />
    <graph at="f" function="f"/>
