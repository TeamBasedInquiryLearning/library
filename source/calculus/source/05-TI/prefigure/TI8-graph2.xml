<diagram dimensions="(300,300)" margins="45" xmlns="https://prefigure.org">
  <definition>f(x) = 1/x </definition>
  <definition>g(x) = 0.5/x</definition>
  <definition>h(x) = 1.5/x</definition>
  <coordinates bbox="(-0.1,-0.1,1.02,3)">
    
    <area-under-curve at="under" function="f" domain="(1/3,1)" fill="lightgray" stroke="lightgray" />
    <polygon points="((0,0),(1/3,0),(1/3,3),(0,3))" fill="lightgray"/>
    <grid-axes/>
    <line endpoints="((1,0),(1,1))" dash="9 9"/>
    <graph at="f" function="f" domain="(0,1)"/>
    <label anchor="(1,1)" alignment="east" color="blue"><m>f(x)</m></label>
    <graph at="g" function="g"   stroke="green" domain="(0,1)"/>
    <label anchor="(1,0.5)" color="green" alignment="east"><m>g(x)</m></label>
    <graph at="h" function="h" stroke="red" domain="(0,1)"/>
    <label anchor="(1,1.5)" color="red" alignment="east"><m>h(x)</m></label>
  </coordinates>

  <annotations>
    <annotation ref="figure" text="A graph of three functions">
      <annotation ref="h" sonify="yes" text="A curve labeled h of x that decreases to 1 comma 1.5.  It is always above f and g"/>
      <annotation ref="f" sonify="yes" text="A curve labeled f of x that decreases to 1 comma 1  It is always above g and below h"/>
      <annotation ref="g" sonify="yes" text="A curve labeled g of x that decreases to 1 comma 0.5.  It is always below f"/>
      <annotation ref="under" text="The area below f and above the x-axis, which starts at the x-axis the left and extends to one on the right, is shaded gray"/>
    </annotation>
  </annotations>
</diagram>