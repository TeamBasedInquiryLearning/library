<diagram dimensions="(300,300)" margins="30"  xmlns="https://prefigure.org">
  <definition>f1(x)=1/3*x-1/3</definition>
  <definition>f2(x)=-1/2*x+1/2</definition>
  <definition>f3(x)=x-5</definition>
  <coordinates bbox="(-3.1,-4.1,9.1,4.1)">
    <grid-axes />
    <label p="(3,4.5)"><m>f(x)</m></label>
    <graph at="f1" function="f1" stroke="blue" domain="(-3,1)"/>
    <graph at="f2" function="f2" stroke="blue" domain="(1,5)"/>
    <graph at="f3" function="f3" stroke="blue" domain="(5,7)"/>
    <point at="hole1" p="(1,0)" stroke="blue" fill="white"/>
    <point at="p1" p="(1,2)" stroke="blue" fill="blue"/>
    <point at="hole2" p="(5,-2)" stroke="blue" fill="white"/>
    <point at="p2" p="(5,0)" stroke="blue" fill="blue"/>
    <point at="hole3" p="(7,2)" stroke="blue" fill="white"/>
    <point at="p1" p="(8,2)" stroke="blue" fill="blue"/> 
  </coordinates>

  <annotations>
    <annotation ref="figure" text="The graph of the piece-wise function f of x consisting of three pieces">
      <annotation ref="f1" sonify="yes" text="The left-most piece of f increases linearly towards the point 1 comma 0"/>
      <annotation ref="hole1" text="An open circle representing a hole in the graph at 1 comma 0"/>
      <annotation ref="p1" text="A filled circle at 0 comma 2"/>
      <annotation ref="f2" sonify="yes" text="The middle piece of f decreases from 1 comma 0 down towards 5 comma -2"/>
      <annotation ref="hole2" text="An open circle representing a hole in the graph at 5 comma -1"/>
      <annotation ref="p2" text="A filled circle at 5 comma 0"/>
      <annotation ref="f3" sonify="yes" text="The right-most piece of f increases linearly from 5 comma 0 towards 7 comma 2"/>
      <annotation ref="hole3" text="An open circle representing a hole in the graph at 7 comma 2"/>
      <annotation ref="p3" text="A filled circle at 8 comma 2"/>   
    </annotation>
  </annotations>
</diagram>