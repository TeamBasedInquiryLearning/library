<diagram dimensions="(300,300)" margins="35" xmlns="https://prefigure.org">
  <coordinates bbox="(-1,-0.5,1.2,3.5)">
    <group at="cylinder">
      <ellipse center="(0,3)" axes="(1,0.5)" stroke="black"/>
      <line endpoints="((-1,0),(-1,3))" stroke="black"/>
      <line endpoints="((1,0),(1,3))" stroke="black"/>
      <ellipse center="(0,0)" axes="(1,0.5)" stroke="black"/>
    </group>
    <group at="water-level">
      <ellipse center="(0,1.9)" axes="(1,0.5)" dash="9 9" stroke="blue"/>
      <line endpoints="((0,1.9),(1,1.9))" stroke="red"><m>r</m></line>
    </group>
    <group at="height">
      <line endpoints="((1.2,0),(1.2,1.9))" stroke="black" rotate="-90" offset="(0,-15)" tactile-offset="(60,0)"><m>h</m></line>
      <line endpoints="((1.15,1.9),(1.25,1.9))"/>
      <line endpoints="((1.15,0),(1.25,0))"/>
    </group>

  </coordinates>

  <annotations>
    <annotation ref="figure" text="Diagram representing a cylindrical tank partially full of water">
      <annotation ref="cylinder" text="A circular cylinder"/>
      <annotation ref="water-level" text="A slice across the cylinder representing the water level. It is labeled with a radius of r"/>
      <annotation ref="height" text="A bar showing the height of the water level to be h"/>
    </annotation>
  </annotations>
</diagram>