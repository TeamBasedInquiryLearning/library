<diagram dimensions="(300,300)" margins="35" xmlns="https://prefigure.org">
  <coordinates bbox="(-1,-0.5,1.2,3.5)">
    <group at="cone">
      <ellipse center="(0,3)" axes="(1,0.5)" stroke="black"/>
      <line endpoints="((0,0),(-1,3))" stroke="black"/>
      <line endpoints="((0,0),(1,3))" stroke="black"/>
    </group>
    <group at="water-level">
      <ellipse center="(0,2)" axes="(2/3,1/3)" dash="9 9" stroke="blue"/>
      <line endpoints="((0,2),(2/3,2))" stroke="red"><m>r</m></line>
    </group>
    <group at="height">
      <line endpoints="((0.8,0),(0.8,2))" stroke="black" rotate="-90" offset="(0,-15)" tactile-offset="(60,0)"><m>h</m></line>
      <line endpoints="((0.75,2),(0.85,2))"/>
      <line endpoints="((0.75,0),(0.85,0))"/>
    </group>

  </coordinates>

  <annotations>
    <annotation ref="figure" text="Diagram representing a conical tank partially full of water">
      <annotation ref="cone" text="A circular cone with its point at the bottom"/>
      <annotation ref="water-level" text="A slice across the cone representing the water level. It is labeled with a radius of r"/>
      <annotation ref="height" text="A bar showing the height of the water level to be h"/>
    </annotation>
  </annotations>
</diagram>