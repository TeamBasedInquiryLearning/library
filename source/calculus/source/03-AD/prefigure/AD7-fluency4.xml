<diagram dimensions="(300,300)" margins="35" xmlns="https://prefigure.org">
  <definition>f(x) = (x^2+x-2)/(x+3) </definition>
  <coordinates bbox="(-5.1,-21,2.1,11)">
    <grid-axes  />
    <graph at="f" function="f" />
    <group ref="asymptotes">
      <line at="L1" endpoints="((-3,-1),(-3,1))" dash="9 9" stroke="red" infinite="yes"/>
      <line at="L2" endpoints="((-1,-3),(1,-1))" dash="9 9" stroke="red" infinite="yes"/>
    </group>
  </coordinates>

  <annotations>
    <annotation ref="figure" text="The graph of a function">
      <annotation ref="f" sonify="yes" text="A curve in two pieces. The piece on the left is concave down below the asymptote y equals x minus 2 and to the left of the asymptote x equals -3.  The other piece is concave up and to the right of x equals 3 and above y equals x plus 2"/>
      <annotation ref="asymptotes" text="The asymptotes of the function">
        <annotation ref="L1" text="The vertical asymptote x equals -3"/>
        <annotation ref="L2" text="The slant asymptote y equals x-2"/>
      </annotation>
    </annotation>
  </annotations>
</diagram>